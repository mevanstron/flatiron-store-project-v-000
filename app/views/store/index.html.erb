<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% @items.each do |item| %>
  <p><%= item.title %> | <%= number_to_currency(item.price.to_f / 100) %> | <%= item.inventory %> available | <%= button_to 'Add to Cart', line_items_path(item_id: item)  if current_user %></p>
<% end %>

<%= link_to "Cart", cart_path(@cart) if @cart %>
