<h1><%= @category.title %></h1>

<ul>
<% @category.items.each do |item| %>
    <li><%= link_to item.title, item_path(item) %> | <%= number_to_currency(item.price.to_f / 100) %> | <%= item.inventory %> available | <%= button_to 'Add to Cart', line_items_path(item_id: item) if current_user %></li>
<% end %>
</ul>
